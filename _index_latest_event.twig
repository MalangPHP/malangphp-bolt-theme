<div class="col-md-5 aleft" id="event">
    <h1 class="title kerning-s uppercase">Upcoming Event</h1>
    {% setcontent record = 'events/latest/1' returnsingle %}
    {% if record %}
            <h3 class="title">{{ record.title }}</h3>
            <span class="meta">{{ record.start_date|date("M d, Y H:i") }}</span>
            <p class="lead">{{ record.description|striptags|raw }}</p>
            <a href="{{ record.link }}" class="btn btn-lg cta">More Info <i class="fa fa-long-arrow-right"></i></a>
    {% else %}
    <h3 class="title">Ooops we haven't organize upcoming event, stay tuned!</h3>
    {% endif %}
</div>
